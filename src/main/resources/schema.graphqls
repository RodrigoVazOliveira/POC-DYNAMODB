schema {
    query: Query
    mutation: Mutation
}

type Livro {
    id: Int
    nome: String
    ano: Int
    nomeDoAutor: String
}

input LivroInput {
    id: Int
    nome: String
    ano: Int
    nomeDoAutor: String
}

type Mutation {
    cadastrarNovoLivro(livro: LivroInput) : Livro
    atualizarLivro(livro: LivroInput) : Livro
    deleteLivro(id: Int) : Boolean
}	

type Query {
    obterTodosOsRegistros : [Livro]
}